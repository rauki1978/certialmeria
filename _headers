# Cloudflare Pages Headers Configuration
# Este archivo configura headers HTTP para Cloudflare Pages

# Headers globales para todos los archivos
/*
  # Seguridad
  X-Content-Type-Options: nosniff
  X-Frame-Options: DENY
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin

  # HSTS (HTTPS obligatorio) - 1 año
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload

  # Content Security Policy (ajustar según necesidades)
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' https://cdn.tailwindcss.com https://unpkg.com https://www.googletagmanager.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https://www.google-analytics.com;

  # Permissions Policy
  Permissions-Policy: geolocation=(), microphone=(), camera=()

# Cache para HTML (1 hora)
/*.html
  Cache-Control: public, max-age=3600, must-revalidate

# Cache para CSS y JS (1 mes)
/css/*
  Cache-Control: public, max-age=2592000, immutable

/js/*
  Cache-Control: public, max-age=2592000, immutable

# Cache para imágenes WebP (1 año)
/images/*.webp
  Cache-Control: public, max-age=31536000, immutable

# Cache para imágenes tradicionales (1 mes)
/images/*.jpg
  Cache-Control: public, max-age=2592000, immutable

/images/*.jpeg
  Cache-Control: public, max-age=2592000, immutable

/images/*.png
  Cache-Control: public, max-age=2592000, immutable

/images/*.gif
  Cache-Control: public, max-age=2592000, immutable

/images/*.svg
  Cache-Control: public, max-age=2592000, immutable

# Cache para fuentes (1 año)
/fonts/*
  Cache-Control: public, max-age=31536000, immutable
  Access-Control-Allow-Origin: *
